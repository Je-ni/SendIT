{
  "name": "sendit",
  "version": "1.0.0",
  "description": "SendIT is a courier service that helps users deliver parcels to different destinations.",
  "main": "./server/bin/dev",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc mocha && nyc report --reporter=text-lcov | coveralls",
    "cover": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "start:dev": "cross-env NODE_ENV=development nodemon server/bin/dev",
    "build": "rm -rf dist/ && mkdir dist && babel server -s -d dist",
    "start": "npm run build && node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Je-ni/SendIT.git"
  },
  "author": "Olibie Chidera",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Je-ni/SendIT/issues"
  },
  "homepage": "https://github.com/Je-ni/SendIT#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "istanbul": "^0.4.5",
    "make-runnable": "^1.3.6",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.1.0",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.4.0",
    "morgan": "^1.9.1",
    "nodemailer": "^4.7.0",
    "pg": "^7.7.1",
    "uuid": "^3.3.2"
  },
  "directories": {
    "test": "test"
  },
  "keywords": [],
  "nyc": {
    "require": [
      "babel-register"
    ],
    "include": [
      "**/controller/parcel.js",
      "**/controller/user.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
